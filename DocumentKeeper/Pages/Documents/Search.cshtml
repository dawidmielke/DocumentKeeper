@page
@model Web.Pages.Documents.SearchModel

<h1>Search Documents</h1>

<form method="get">
    <div class="form-group">
        <label for="searchInput">Search Title:</label>
        <input type="text" id="searchInput" name="title" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Documents != null)
{
    <h2>Search Results:</h2>
    @if (Model.Documents.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var document in Model.Documents)
                {
                    <tr>
                        <td>@document.Id</td>
                        <td>@document.Title</td>
                        <td>@document.Description</td>
                        <td>@document.Status</td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@document.Id" class="btn btn-primary">Edit</a>
                            <a asp-page="Download" asp-route-id="@document.Id" class="btn btn-primary">Download</a>
                            <a asp-page="Delete" asp-route-id="@document.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No documents found.</p>
    }
}